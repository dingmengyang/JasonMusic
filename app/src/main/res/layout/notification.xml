<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/notify_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notify_tv_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/notify_tv_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/notify_btn_pre"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="2dp"
            android:background="@drawable/widget_last" />

        <ImageButton
            android:id="@+id/notify_btn_play"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="2dp"
            android:background="@drawable/widget_play" />

        <ImageButton
            android:id="@+id/notify_btn_pause"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="2dp"
            android:background="@drawable/widget_pause" />

        <ImageButton
            android:id="@+id/notify_btn_next"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="2dp"
            android:background="@drawable/widget_next" />

        <ImageButton
            android:id="@+id/notify_btn_close"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="3dp"
            android:background="@drawable/notify_close" />
    </LinearLayout>
</LinearLayout>